---
layout: default
---

<%= page.include('blog-navigation') %>

<div class="post">
	
  <h1 class='title'><%= page.title %></h1>
  
  <% unless page.subtitle.nil? %>
    <h2 class='subtitle'><%= page.subtitle %></h2>
  <% end %>
  
  <p class='byline'>
    <span class="author"><%= page.author %></span> 
    <span class="published"><%= page.published.strftime("%b %d, %Y") %></span>
  </p>

  <%= content %>

  <% if page.published < Date.parse("2010-10-25") %>
    <%= page.include 'comments-disclaimer' %>
  <% end %>
  <%= page.include 'disqus-comment-support' %>
</div>
