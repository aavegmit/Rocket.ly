<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en-us">
  <head>
     <meta http-equiv="content-type" content="text/html; charset=utf-8" />
     <title><%= page.title %>: <%= page.subtitle %></title>
     <meta name="author" content="Dan Yoder" />

     <link rel="start" href="/" />

  	<% unless page.keywords.nil? %>
  	  <meta name="keywords" content="{{ page.keywords }}">
  	<% end %>
	
  	<% unless page.feed.nil? %>
    	<link rel="alternate" type="application/atom+xml" 
    	  href="{{ page.feed }}" title="Atom feed" />
  	<% end %>

     <!-- Homepage CSS -->
     <link rel="stylesheet" type="text/css" href="http://yui.yahooapis.com/3.1.1/build/cssreset/reset-min.css">
